        <plugin name="Amasty_Base::show-unsubscribe-link"
                type="Amasty\Base\Plugin\AdminNotification\Block\Grid\Renderer\Actions"/>

    </type>

    <type name="Magento\AdminNotification\Block\Grid\Renderer\Notice">
