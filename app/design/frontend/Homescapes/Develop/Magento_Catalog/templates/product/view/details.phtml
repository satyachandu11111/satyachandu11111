<?php if ($detailedInfoGroup = $block->getGroupChildNames('detailed_info', 'getChildHtml')):?>
    <div class="product info detailed">
        <?php $layout = $block->getLayout(); ?>
		
        <div id="element">	
			
            <?php foreach ($detailedInfoGroup as $name):?>
                <?php
                    $html = $layout->renderElement($name);
                    if (!trim($html)) {
                        continue;
                    }
                    $alias = $layout->getElementAlias($name);
                    $label = $block->getChildData($alias, 'title');
                ?>
			
			<a class="data switch"
                       tabindex="-1"
                       data-toggle="switch"
                       href="#<?= /* @escapeNotVerified */ $alias ?>"
                       id="tab-label-<?= /* @escapeNotVerified */ $alias ?>-title">
				
                <div class="data item title card-header"
                     aria-labeledby="tab-label-<?= /* @escapeNotVerified */ $alias ?>-title"
                     data-role="collapsible" id="tab-label-<?= /* @escapeNotVerified */ $alias ?>">
					
					
                    
                        <?= /* @escapeNotVerified */ $label ?>
                   
					
					
                </div>
			
			 </a>
			
			<div class="card-body content" id="<?= /* @escapeNotVerified */ $alias ?>" data-role="content">
				<?= /* @escapeNotVerified */ $html ?>
			</div>
			
			
            <?php endforeach;?>
        </div>

    </div>

<script>

require(['jquery', 'accordion'], function ($) {
	
	
    'use strict';

    jQuery( document ).ready(function() { 
		
		if (window.matchMedia("(min-width: 992px)").matches) {
		
			jQuery( "#element" ).accordion({
				"openedState": "active",
				"collapsible": true,
				"active": [0,1], /** Integrat Dynamic open tab  */
				"multipleCollapsible": true,
			});
		
		}
		else{
			
			jQuery( "#element" ).accordion({
				"openedState": "active",
				"collapsible": true,
				"active": [false], /** Integrat Dynamic open tab  */
				"multipleCollapsible": true,
			});
			
		}
    });                 
});


</script>

<?php endif; ?>
